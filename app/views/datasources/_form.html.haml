= form_for(@datasource) do |f|
  - if @datasource.errors.any?
    #error-explanation
      %h2
        = pluralize(@datasource.errors.count, "error")
        prohibited this datasource from being saved:
      %ul
        - @datasource.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :datasourcetype_id
    %br/
    = f.text_field :datasourcetype_id
  .actions
    = f.submit
