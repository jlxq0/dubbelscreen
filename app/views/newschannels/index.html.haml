.page-header
  = link_to new_user_newschannel_path(@user), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Newschannel
  %h1 Listing Newschannels

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Name
        %th Newschannel
        %th

    %tbody
      - @newschannels.each do |newschannel|
        %tr
          %td= link_to newschannel.name, [current_user, newschannel]
          %td= newschannel.feedurl
          %td
            = ilink_to 'edit', 'Edit', edit_user_newschannel_path(@user, newschannel) , :class => 'btn btn-primary btn-xs'
            = ilink_to 'trash', 'Destroy', user_newschannel_path(@user, newschannel), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs'
