= form_for(@location) do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = pluralize(@location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - @location.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :user_id
    %br/
    = f.text_field :user_id
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :lat
    %br/
    = f.text_field :lat
  .field
    = f.label :long
    %br/
    = f.text_field :long
  .field
    = f.label :woeid
    %br/
    = f.number_field :woeid
  .actions
    = f.submit
